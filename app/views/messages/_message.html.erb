<div class="px-4 py-2 border rounded-lg shadow-md mb-4 w-80" data-controller="message" data-current-user="<%= @user == message.user %>">
  <%= message.text %>
  <div class="flex justify-between items-center">
    <p><%= message.user.display_name %></p>
    <p class="text-gray-600 text-sm">
      <%= message.created_at%>
    </p>
  </div>
</div>
